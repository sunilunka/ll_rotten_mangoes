<h1>Edit movie</h1>

<%= link_to "Back to this movie", movies_path(@movie) %>

<%= form_for @movie do |f| %>

  <div>
      <%= f.label "title" %><br>
      <%= f.text_field "title" %>
  </div>
  <div>
    <%= f.label "release_date" %><br>
    <%= f.date_field "release_date" %>
  </div>
  <div>
      <%= f.label "director" %><br>
      <%= f.text_field "director" %>
  </div>
  <div>
    <%= f.label "runtime_in_minutes" %>
    <%= f.number_field "runtime_in_minutes" %>
  </div>
  <div>
    <%= f.label "poster_image_url" %><br>
    <%= f.text_field "poster_image_url" %>
  </div>
  <div>
    <%= f.label "description" %><br>
    <%= f.text_field "description" %>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>